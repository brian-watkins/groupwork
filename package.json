{
  "name": "groupwork",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "local:dev:app": "next dev",
    "local:dev:db": "./scripts/startDB.sh",
    "local:db:migrate": "prisma migrate reset",
    "local": "run-p local:dev:*",
    "local:test:app": "dotenv -e .env.test -- next dev",
    "local:test:db": "./scripts/startTestDB.sh",
    "local:test:db:migrate": "wait-on tcp:5432 && dotenv -e .env.test -- prisma migrate reset --skip-seed --force",
    "local:test": "run-p -l -n local:test:**",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "test:app": "dotenv -e .env.test -- best --config ./behaviors/best.app.config.ts",
    "test:domain": "best --behaviors './behaviors/domain/**/*.behavior.ts'",
    "test:infra": "best --config ./behaviors/best.infra.config.ts",
    "test:component": "best --behaviors './behaviors/component/**/*.behavior.ts'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@clerk/testing": "^1.4.34",
    "@tailwindcss/postcss": "^4.0.17",
    "@tailwindcss/vite": "^4.0.17",
    "@testcontainers/postgresql": "^10.24.0",
    "@types/luxon": "^3.6.0",
    "@types/node": "22.13.14",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "best-behavior": "^0.15.2",
    "dotenv-cli": "^8.0.0",
    "great-expectations": "^1.10.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.0.17",
    "testcontainers": "^10.24.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vite-tsconfig-paths": "^5.1.4",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.13.0",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@prisma/client": "^6.5.0",
    "luxon": "^3.6.1",
    "next": "^15.2.4",
    "prisma": "^6.5.0",
    "pure-rand": "^7.0.1",
    "react": "^19.1.0",
    "react-aria-components": "^1.7.1",
    "react-dom": "^19.1.0",
    "zustand": "^5.0.3"
  },
