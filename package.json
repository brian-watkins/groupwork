    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "best-behavior": "^0.16.7",
    "dotenv-cli": "^8.0.0",
    "eslint": "9.24.0",
    "eslint-config-next": "15.3.0",
    "eslint-config-prettier": "^10.1.2",
    "great-expectations": "^1.10.1",
    "monocart-coverage-reports": "^2.12.4",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.51.1",
    "postcss": "^8.5.3",
    "prettier": "3.5.3",
