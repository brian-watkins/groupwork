{
  "name": "groupwork",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "local:dev:app": "next dev --turbo",
    "local:dev:db": "./scripts/startDB.sh",
    "local:db:migrate": "prisma migrate reset",
    "local": "run-p -l local:dev:*",
    "local:test:app": "dotenv -e .env.test -- next dev --turbo",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "format:check": "prettier . --check",
    "test:app": "dotenv -e .env.test -- best --config ./behaviors/best.app.config.ts",
    "test:domain": "best --config ./behaviors/best.domain.config.ts",
    "test:infra": "best --config ./behaviors/best.infra.config.ts",
    "test:component": "best --config ./behaviors/best.component.config.ts",
    "test": "run-s test:*",
    "test:coverage:app": "dotenv -e .env.test -- best --config ./behaviors/best.app.coverage.config.ts",
    "test:coverage:domain": "npm run test:domain -- --coverage",
    "test:coverage:infra": "npm run test:infra -- --coverage",
    "test:coverage:component": "npm run test:component -- --coverage",
    "coverage:merge": "tsx ./scripts/mergeCoverageReports.ts",
    "coverage": "run-s test:coverage:* coverage:merge"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
